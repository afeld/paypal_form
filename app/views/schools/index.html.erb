<a href="/admin">Return to Admin Page</a>
<h1>Listing schools</h1>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>#Prices</th>
	<th>Program</th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%=h school.name %></td>
    <td><%=h school.city %></td>
    <td><%=h school.state %></td>
    <td><%=h school.price_options.size %></td>
	<td><%=h school.program %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New school', new_school_path %>